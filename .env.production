# Environment variables for production deployment

# Database Configuration
POSTGRES_DB=legal_review
POSTGRES_USER=reviewer
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS_REQUIRED
POSTGRES_PORT=5432

# Backend Configuration
DATABASE_URL=postgresql://reviewer:CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS_REQUIRED@postgres:5432/legal_review
REDIS_URL=redis://redis:6379/0
LOG_LEVEL=INFO
DEBUG_MODE=false
PYTHONUNBUFFERED=1

# CORS and Domain
DOMAIN=yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com
VITE_API_URL=https://yourdomain.com/api

# Workers
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_TIMEOUT=120

# LLM Configuration (Optional)
# OPENAI_API_KEY=sk-your-key-here
# LLM_MODEL=gpt-4
# LLM_TEMPERATURE=0.3

# Security
SECRET_KEY=CHANGE_ME_SECURE_SECRET_KEY_MIN_32_CHARS
ALGORITHM=HS256
TOKEN_EXPIRY=3600

# Upload Configuration
MAX_UPLOAD_SIZE=104857600
ALLOWED_FORMATS=pdf,docx,txt,html

# Email Configuration (Optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@company.com

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_PASSWORD

# SSL/TLS
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
# SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Monitoring and Logging
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_PDF_OCR=false
ENABLE_LLM_EXTRACTION=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_AUTOMATIC_EVALUATION=true

# Cache
REDIS_CACHE_TTL=3600
SESSION_CACHE_TTL=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=legal-review-backups
