# Environment variables for development

# Database Configuration
POSTGRES_DB=legal_review_dev
POSTGRES_USER=reviewer
POSTGRES_PASSWORD=dev_password
POSTGRES_PORT=5432

# Backend Configuration
DATABASE_URL=postgresql://reviewer:dev_password@postgres:5432/legal_review_dev
REDIS_URL=redis://redis:6379/0
LOG_LEVEL=DEBUG
DEBUG_MODE=true
PYTHONUNBUFFERED=1

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api

# CORS
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,http://127.0.0.1

# Workers
WORKERS=2
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Security (Use weak values for development only)
SECRET_KEY=dev_secret_key_not_for_production
ALGORITHM=HS256
TOKEN_EXPIRY=3600

# Upload Configuration
MAX_UPLOAD_SIZE=104857600
ALLOWED_FORMATS=pdf,docx,txt,html

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Feature Flags
ENABLE_PDF_OCR=false
ENABLE_LLM_EXTRACTION=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_AUTOMATIC_EVALUATION=true

# Cache
REDIS_CACHE_TTL=3600
SESSION_CACHE_TTL=86400
